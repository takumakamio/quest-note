<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="listnewPage">
      <div class="container">
        <%= form_with model: @list, url: { action: :create }, class: "new_list" do |f| %>
          <% if @list.errors.any? %>
            <p class="text-danger">タイトルを入力してください</p>
          <% end %>
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, class: "form-control listName", placeholder: "リスト名" %>
          <%= f.hidden_field :user_id, :value => @user.id %>

          <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>