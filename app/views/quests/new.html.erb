<div class="questnewPgae">
  <div class='container'>
    <%= form_with model: @quest, url: { action: :create }, html: { class: 'questnewForm' }, local: true do |f| %>
      <%= f.hidden_field :list_id, value: @list.id %>
      <% if @quest.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <div class="questnewForm_quest_title">
        <%= f.label :quest_title %>
        <%= f.text_field :quest_title, autofocus: true, class: "form-control", placeholder: "カード名" %>
      </div>

      <div class="questnewForm_quest_detail">
        <%= f.label :quest_detail %>
        <%= f.text_area :quest_detail, autofocus: true, class: "form-control", placeholder: "詳細" %>
      </div>

      <div class="questnewForm_quest_detail">
        <%= f.label :start_date, "開始日　" %>
        <%= f.date_field :start_date %>
      </div>

      <div class="questnewForm_quest_detail">
        <%= f.label :end_date, "最終日　" %>
        <%= f.date_field :end_date %>
      </div>

      <div class="questnewForm_quest_detail">
        <%= f.label :quest_status, "ステータス　" %>
        <%= f.select :quest_status, Quest.quest_statuses.keys%>
      </div>

      <div class="questnewForm_quest_detail">
        <%= f.label :prize_money, "賞金(円)" %>
        <%= f.text_field :prize_money, class: "form-control", placeholder: "100" %>
      </div>

      <div class="text-center"><%= f.submit "作成する", class: "submitBtn" %></div>

    <% end %>
  </div>
</div>
